<div class="collapse" id="collapseNew">
    <div class="well" style="border-left: 5px solid #00C851;">
        <!--If the user is logged in, show the new schedule form-->
        <h4>Add your journal details <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span></h4>
        <form id="add-comment-form" action="/journal" method="POST">
            <div class="form-group">
                <label for="journalName">Journal Name</label>
            	<input type="text" id="journalName" name="journalName" required>
            </div>
            <div class="form-group">
                <label for="roomId">Set Room</label>
                <input type="text" id="roomId" name="roomId" required>
            </div>
            <div class="form-group">
                <label for="vegStartDate">Set Vegetative Start Date: </label>
                <input type="date" id="vegStartDate" name="vegetative[start_date]"required>
            </div>
            <div class="form-group">
                <label for="vegStartDate">Set Vegetative End Date: </label>
                <input type="date" id="vegEndDate" name="vegetative[start_date]"required>
            </div>
            <div class="form-group">
                <label for="vegStartDate">Set Flowering Start Date: </label>
                <input type="date" id="floweringStartDate" name="flowering[start_date]" required>
            </div>
            <div class="form-group">
                <label for="vegStartDate">Set Flowering End Date: </label>
                <input type="date" id="floweringStartDate" name="flowering[end_date]" required>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-sm">Add Room <i class="fa fa-calendar" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>
</div>